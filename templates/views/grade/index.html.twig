{% extends 'common/connected.html.twig' %}

{% block body %}
    <h1>Grades</h1>

    <div  class="row">
        Average : {{ average }}
    </div>

    {% for subjectName, arrayGrade in gradeGroupedBySubject %}
        <div class="section" >
            <h2 class="row" >
                <span class="ticket_title red-text text-darken-1">
                    {{ subjectName }}
                </span>
            </h2>
            {% include 'views/grade/showCollection.html.twig' with {'gradeArray' : arrayGrade} %}
        </div>
        <div class="divider"></div>
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src={{ asset('switchUser.js')}}></script>
{% endblock %}