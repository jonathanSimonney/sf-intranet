{% extends 'common/connected.html.twig' %}

{% block body %}
    <h1>Grades</h1>

    {% if average == false %}
        <div  class="row">
            You don't have any grade currently.
        </div>
    {% else %}
        <div  class="row">
            Average : {{ average }}
        </div>

        {% for subjectName, arrayGrade in gradeGroupedBySubject %}
            <div class="section" >
                <h2 class="row" >
                    <span class="ticket_title red-text text-darken-1">
                        {{ subjectName }}
                    </span>
                </h2>
                {% include 'views/grade/showCollection.html.twig' with {'gradeArray' : arrayGrade} %}
            </div>
            <div class="divider"></div>
        {% endfor %}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src={{ asset('switchUser.js')}}></script>
{% endblock %}